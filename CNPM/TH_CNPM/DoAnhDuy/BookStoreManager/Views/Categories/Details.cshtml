@model BookStoreManager.Models.THELOAI

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Chi tiết loại</h2>

    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.ID)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ID)
            </dd>
            <dt>
                Mã loại
            </dt>

            <dd>
                @Html.DisplayFor(model => model.IDCate)
            </dd>
            <dt>
                Tên loại
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NameCate)
            </dd>

        </dl>
    </div>
    <p>
        <a class="btn btn-danger" href="@Url.Action("Index","Categories")"><i class="fa-solid fa-arrow-left"></i> Book Cate</a>
        <a class="btn btn-success" href="@Url.Action("Edit","Categories", new { id = Model.IDCate })"><i class="fa-solid fa-pen"></i> Edit</a>
    </p>

</div>
