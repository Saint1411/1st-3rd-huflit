@model BookStoreManager.Models.SACH

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    #Edit {
        max-width: 80%;
        margin: auto;
    }

    .form-control {
    }
</style>
<h2 style="max-width:80%; margin:auto;">Edit Book</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div id="Edit" class="form-horizontal">
        <h4 style="color:forestgreen; text-align:center">@Model.TenSach</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaSach)

        <div class="form-group">
            <div class="row">
                <div class="col-md-2" style="text-align:right">
                    <strong>Tên sách:</strong>
                </div>
                <div class="col-md-10" style="width:75%">
                    @Html.EditorFor(model => model.TenSach, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenSach, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-2" style="text-align:right">
                    <strong>Thể loại:</strong>
                </div>
                <div class="col-md-10" style="width:20%">
                    @Html.DropDownList("Catelogy", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Catelogy, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-2" style="text-align:right">
                    <strong>Tác giả:</strong>
                </div>
                <div class="col-md-10" style="width:75%">
                    @Html.EditorFor(model => model.TacGia, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TacGia, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-2" style="text-align:right">
                    <strong>Số lượng:</strong>
                </div>
                <div class="col-md-10" style="width:75%">
                    @Html.EditorFor(model => model.SoLuongTon, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SoLuongTon, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-2" style="text-align:right">
                    <strong>Giá:</strong>
                </div>
                <div class="col-md-10" style="width:75%">
                    @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-2" style="text-align:right">
                    <strong>Link ảnh:</strong>
                </div>
                <div class="col-md-10" style="width:75%">
                    @Html.EditorFor(model => model.ImageBook, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ImageBook, "", new { @class = "text-danger" })
                </div>
            </div>
        
        </div>
        

        <div  style="margin-top:15px; margin-left:55px;" class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a  class="btn btn-danger" href="@Url.Action("Index","Book")"><i class="fa-solid fa-arrow-left"></i> List book</a>
                <input  type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}



<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
