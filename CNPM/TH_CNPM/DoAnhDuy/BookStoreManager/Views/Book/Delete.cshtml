@model BookStoreManager.Models.SACH

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4 style="color:forestgreen;">@Model.TenSach</h4>
    <hr />
    <p><strong>Tên sách: </strong> @Html.DisplayFor(model => model.TenSach) </p>
    <p><strong>Tác giả: </strong> @Html.DisplayFor(model => model.TacGia) </p>
    <p><strong>Số lượng tồn: </strong> @Html.DisplayFor(model => model.SoLuongTon) </p>
    <p><strong>Giá: </strong> @Html.DisplayFor(model => model.Price) </p>
    <strong>Link hình ảnh: </strong> 
    <p>@Html.DisplayFor(model => model.ImageBook)</p>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <a class="btn btn-secondary" href="@Url.Action("Index","Book")"><i class="fa-solid fa-arrow-left"></i> List book</a> |
            <input type="submit" value="Delete" class="btn btn-danger" />
        </div>
    }
</div>
