@model BookStoreManager.Models.ADMINUSER

@{
    ViewBag.Title = "RegisterUser";
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/layoutAdmin.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <link href="~/Public/css/all.min.css" rel="stylesheet" />

}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">

<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.1/dist/jquery.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
<style>
    .field-validation-error {
        color: red;
    }

    body {
        background-image: url(/Public/image/book-bg.jpg);
        background-size: 100%;
    }

    .login-form {
        margin: 0 auto;
        padding: 30px 30px 30px 30px;
        margin-top: 100px;
        background: rgba( 255, 255, 255, 0.35 );
        box-shadow: 0 8px 32px 0 rgba( 31, 38, 135, 0.37 );
        backdrop-filter: blur( 13px );
        -webkit-backdrop-filter: blur( 13px );
        border-radius: 10px;
        border: 1px solid rgba( 255, 255, 255, 0.18 );
        width: 461px;
    }

    .nameuser {
        width: 100%;
    }

    .nameuser2 {
        width: 100%;
        margin-right: 20px;
    }
</style>
<h2 style="text-align:center; margin-top:30px; color:#6ECCAF">Welcome to BookStore</h2>
<div class="row justify-content-md-center">
    <div class="col-md-5">
        @using (Html.BeginForm("RegisterUser", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            if (ViewBag.ErrorRegister != null)
            {
                <p>@ViewBag.ErrorRegister</p>
            }
            @*<p>User ID</p>
                <p>@Html.EditorFor(m => m.ID)</p>
                <p>
                    @Html.ValidationMessageFor(m => m.ID)
                </p>*@
            <div class="card">
                <div class="card-header">
                    <div class="card-title"><h4 style="color:#C0DEFF;text-align:center">Register</h4></div>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-4">
                                ID User
                            </div>
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.ID, new { @class = "nameuser2" })
                                @Html.ValidationMessageFor(m => m.ID)
                            </div>
                        </div>

                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-4">
                                User Name
                            </div>
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.NameUser, new { @class = "nameuser2" })
                                @Html.ValidationMessageFor(m => m.NameUser)
                                @if (ViewBag.ErrorRegister != null)
                                {
                                    <p style="color:red;">@ViewBag.ErrorRegister</p>
                                }
                            </div>
                        </div>

                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-4">
                                User Role
                            </div>
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.RoleUser, new { @class = "nameuser2" })
                                @Html.ValidationMessageFor(m => m.RoleUser)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-4">
                                Password
                            </div>
                            <div class="col-md-8">
                                @Html.PasswordFor(m => m.PasswordUser, new { @class = "nameuser2" })
                                @Html.ValidationMessageFor(m => m.PasswordUser)
                            </div>
                        </div>

                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-4">
                                Confirm password
                            </div>
                            <div class="col-md-8">
                                @Html.PasswordFor(m => m.ConfirmPass, new { @class = "nameuser2" })
                                @Html.ValidationMessageFor(m => m.ConfirmPass)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <input class="btn btn-primary" type="submit" value="Đăng ký" />
                        <a style="margin-left:15px;" href="@Url.Action("Index","Admin")">Đăng nhập</a>
                    </div>
                </div>
            </div>
            @*if (ViewBag.ErrorRegister != null)
                {
                    <p>@ViewBag.ErrorRegister</p>
