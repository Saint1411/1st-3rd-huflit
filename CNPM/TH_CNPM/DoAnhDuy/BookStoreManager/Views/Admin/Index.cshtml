@model BookStoreManager.Models.ADMINUSER

@{
    ViewBag.Title = "FormLogin";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.1/dist/jquery.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
<style>
    .field-validation-error {
        color: red;
    }
    body {
        background-image: url(/Public/image/book-bg.jpg);
        background-size: 100%;
    }

    .login-form {
        margin: 0 auto;
        padding: 30px 30px 30px 30px;
        margin-top: 100px;
        background: rgba( 255, 255, 255, 0.35 );
        box-shadow: 0 8px 32px 0 rgba( 31, 38, 135, 0.37 );
        backdrop-filter: blur( 13px );
        -webkit-backdrop-filter: blur( 13px );
        border-radius: 10px;
        border: 1px solid rgba( 255, 255, 255, 0.18 );
        width: 461px;
    }
    .nameuser{
        width:100%;
    }
    .nameuser2 {
        width: 100%;
    }
</style>
<h2 style="text-align:center; margin-top:30px; color:aquamarine">Welcome to BookStore</h2>
@using (Html.BeginForm("LoginAccount", "Admin"))
{
    @Html.AntiForgeryToken()

    <div class="login-form">
        <form action="/action_page.php" class="was-validated">
            <div class="form-group">
                <h2>Đăng nhập</h2>
                <label for="uname">Tên người dùng: </label>
                <br />
                @Html.TextBoxFor(m => m.NameUser, new { style = "field-validation-error", @class = "nameuser un"})
                @Html.ValidationMessageFor(m => m.NameUser)
            </div>
            <div class="form-group">
                <label for="pwd">Mật khẩu:</label>
                <br />
                @Html.PasswordFor(m => m.PasswordUser, new { @class = "nameuser2" })
                @Html.ValidationMessageFor(m => m.PasswordUser)
                @if (ViewBag.ErroInfor == null)
                {
                    <p>@ViewBag.ErroInfor</p>

                }
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" type="checkbox" name="remember" required> Đồng ý với điều khoản
                </label>
            </div>
            <button type="submit" class="btn btn-primary">Đăng nhập</button>
            <a style="margin-left:15px; color:forestgreen" href="@Url.Action("RegisterUser","Admin")">Đăng ký</a>

        </form>
    </div>

}

