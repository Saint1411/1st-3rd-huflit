<!DOCTYPE html>
<html>
<head>
    <title>@Page.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/layoutAdmin.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    @RenderSection("head", required: false)
</head>
<body>
    <section class="clearfix header bg-primary">
        <div class="container-fluid">
            <nav class="navbar navbar-expand-lg bg-primary">
                <div class="container-fluid">
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="@Url.Action("Index","Book")">Danh Sách Sách</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Create","Book")">Thêm Sách</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="@Url.Action("Index","Category")">Danh sách loại sách</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Create","Category")">Thêm loại sách</a>
                            </li>
                        </ul>
                        <form class="d-flex" role="search">
                            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                            <button class="btn btn-outline-success" type="submit">Search</button>
                        </form>
                    </div>
                </div>
            </nav>
        </div>
    </section>
    <section class="clearfix maincontent">
        <div class="container-fluid py-3">
            @RenderBody()
        </div>
    </section>
    <section class="clearfix footer bg-black">
        <div class="container-fluid text-white text-center py-3">
            Nhóm 5: Quản lý nhà sách
        </div>
    </section>

    @RenderSection("footer", required: false)
</body>
</html>
